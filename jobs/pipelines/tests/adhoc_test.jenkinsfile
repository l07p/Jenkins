pipeline {
    agent any
    
    parameters {
        string(name: 'TEST_FILE', defaultValue: 'arithmetic_test.py', description: 'The name of the test file to run')
    }
    
    stages {
        stage('Prepare') {
            steps {
                echo "Preparing to run tests from file: ${params.TEST_FILE}"
            }
        }
        
        stage('Run Tests') {
            steps {
               
                // Run the tests and generate JUnit XML report
                sh '''
                    . venv/bin/activate
                    pytest --junitxml=test-results.xml ${params.TEST_FILE}
                '''
                
                // Archive the test results
                junit 'test-results.xml'
            }
        }
    }
    
    post {
        always {
            echo 'Cleaning up...'
            // Clean up workspace if needed
            cleanWs()
        }
    }
}
