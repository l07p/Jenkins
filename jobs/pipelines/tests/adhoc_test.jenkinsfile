pipeline {
    agent any
    
    parameters {
        string(name: 'TEST_FILE', defaultValue: 'arithmetic_test.py', description: 'The name of the test file to run')
    }
    
    stages {
        stage('Setup Python Environment') {
            steps {
                script {
                    // Activate the virtual environment
                    sh ". venv/bin/activate && pip install pytest"
                }
            }
        }
        
        stage('Run Tests') {
            steps {
                script {
                    echo "Running tests from file: ${TEST_FILE}"
                    
                    // Run tests using pytest and generate an XML report
                    sh ". venv/bin/activate && pytest --junitxml=test-results.xml ${TEST_FILE}"
                }
            }
        }
        
        stage('Save Test Results') {
            steps {
                script {
                    echo "Saving test results for file: ${TEST_FILE}"
                    junit 'test-results.xml'
                }
            }
        }
    }
    
    post {
        always {
            echo 'Cleaning up...'
            cleanWs()
        }
    }
}
