pipeline {
    agent any
    
    parameters {
        string(name: 'TEST_FILE', defaultValue: 'arithmetic_test.py', description: 'The name of the test file to run')
    }
    
    stages {

        stage('Run Tests') {
            steps {
                script {
                    echo "Running tests from file: ${TEST_FILE}"
                    // Assuming you have a Python environment set up and accessible
                    // sh "python3 -m unittest ${TEST_FILE}"
                    sh "pytest --junitxml=test-results.xml ${TEST_FILE}"
                }
            }
        }
        
        stage('Save Test Results') {
            steps {
                script {
                    echo "Saving test results for file: ${TEST_FILE}"
                    // Assuming test results are saved in a file named 'test-results.xml'
                    junit 'test-results.xml'
                }
            }
        }
    }
    
    post {
        always {
            echo 'Cleaning up...'
            // Clean up workspace if needed
            cleanWs()
        }
    }
}
